{
  "name": "http-test",
  "displayName": "http-test",
  "description": "VS Code extension for running HTTP tests using @iyulab/http-test library with enhanced error handling and progress tracking",
  "publisher": "iyulab",
  "pricing": "Free",
  "repository": {
    "type": "git",
    "url": "https://github.com/iyulab/http-test"
  },
  "icon": "logo_128.png",
  "version": "1.1.0",
  "engines": {
    "vscode": "^1.104.0"
  },
  "categories": [
    "Testing"
  ],
  "keywords": [
    "http",
    "api",
    "testing",
    "http file",
    "extension",
    "assertion",
    "HTTP testing",
    "API testing",
    "REST API",
    "request validation",
    "response validation",
    "API automation",
    "integration testing",
    "REST client",
    "HTTP client",
    "API test automation",
    "web services testing",
    "HTTP methods",
    "HTTP request",
    ".http"
  ],
  "main": "./out/extension.js",
  "activationEvents": [
    "onLanguage:http",
    "onCommand:extension.http_test.run",
    "onCommand:extension.http_test.runVerbose"
  ],
  "contributes": {
    "commands": [
      {
        "command": "extension.http_test.run",
        "title": "Run HTTP Test",
        "icon": {
          "light": "assets/light/test.svg",
          "dark": "assets/dark/test.svg"
        }
      },
      {
        "command": "extension.http_test.runVerbose",
        "title": "Run HTTP Test (Verbose)",
        "icon": {
          "light": "assets/light/test-verbose.svg",
          "dark": "assets/dark/test-verbose.svg"
        }
      },
      {
        "command": "extension.http_test.stop",
        "title": "Stop HTTP Test",
        "icon": "$(stop)"
      }
    ],
    "menus": {
      "editor/title": [
        {
          "when": "resourceExtname == .http",
          "command": "extension.http_test.run",
          "group": "navigation@1"
        },
        {
          "when": "resourceExtname == .http",
          "command": "extension.http_test.runVerbose",
          "group": "navigation@2"
        }
      ],
      "editor/context": [
        {
          "when": "resourceExtname == .http",
          "command": "extension.http_test.run",
          "group": "z_http-test@1"
        },
        {
          "when": "resourceExtname == .http",
          "command": "extension.http_test.runVerbose",
          "group": "z_http-test@2"
        }
      ],
      "explorer/context": [
        {
          "when": "resourceExtname == .http",
          "command": "extension.http_test.run",
          "group": "z_http-test@1"
        },
        {
          "when": "resourceExtname == .http",
          "command": "extension.http_test.runVerbose",
          "group": "z_http-test@2"
        }
      ],
      "commandPalette": [
        {
          "command": "extension.http_test.run",
          "when": "resourceExtname == .http"
        },
        {
          "command": "extension.http_test.runVerbose",
          "when": "resourceExtname == .http"
        }
      ]
    },
    "keybindings": [
      {
        "command": "extension.http_test.run",
        "key": "ctrl+alt+t",
        "mac": "cmd+alt+t",
        "when": "editorTextFocus && resourceExtname == .http"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "vscode-test",
    "test:watch": "vscode-test --watch",
    "package": "npx @vscode/vsce package",
    "publish": "npx @vscode/vsce publish"
  },
  "devDependencies": {
    "@types/mime-types": "^3.0.1",
    "@types/mocha": "^10.0.10",
    "@types/node": "24.x",
    "@types/vscode": "^1.104.0",
    "@typescript-eslint/eslint-plugin": "^8.44.0",
    "@typescript-eslint/parser": "^8.44.0",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2",
    "eslint": "^9.35.0",
    "typescript": "^5.9.2"
  }
}
